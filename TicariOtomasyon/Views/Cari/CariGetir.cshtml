@model TicariOtomasyon.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cari Güncelleme</h2>
<br />

@using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.Cariid)
        @Html.LabelFor(x => x.CariAd, "Cari Adı: ") @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" }) @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red" }) <br />
        @Html.LabelFor(x => x.CariSoyad, "Cari Soyadı: ") @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" }) @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:orange" }) <br />
        @Html.LabelFor(x => x.CariSehir, "Cari Şehir: ") @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" }) 
        @Html.LabelFor(x => x.CariMail, "Cari Mail: ") @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning">Güncelle</button>
}


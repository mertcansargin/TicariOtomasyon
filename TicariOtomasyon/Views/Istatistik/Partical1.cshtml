@model IEnumerable<TicariOtomasyon.Models.Siniflar.SinifGrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th style="padding-left:10%">Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Kişi</th>
                </tr>
            </thead>
            <tbody>
                @{int sirano = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;}@sirano</td>
                        <td style="padding-left:10%">@x.Departman</td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-danger" style="width: @x.Sayi"></div>
                                </div>
                            }
                            @if (x.Sayi == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: @x.Sayi"></div>
                                </div>
                            }@if (x.Sayi == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: @x.Sayi"></div>
                                </div>
                            }

                        </td>
                        <td>
                            @if (x.Sayi == 1)
                            {
                                <span class="badge bg-danger">@x.Sayi</span>
                            }
                            @if (x.Sayi == 2)
                            {
                                <span class="badge bg-success">@x.Sayi</span>
                            }@if (x.Sayi == 3)
                            {
                                <span class="badge bg-warning">@x.Sayi</span>
                            } 
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
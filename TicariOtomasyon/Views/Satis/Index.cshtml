@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<table id="SatisTable" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach (var sh in Model)
    {
        <tr>
            <td>@sh.Satisid</td>
            <td>@sh.Urun.UrunAdi</td>
            <td>@sh.Cariler.CariAd @sh.Cariler.CariSoyad</td>
            <td>@sh.Personel.PersonelAd @sh.Personel.PersonelSoyad</td>
            <td>@sh.Adet</td>
            <td>@sh.Fiyat</td>
            <td>@sh.ToplamTutar</td>
            <td>@sh.Tarih</td>
            <td><a href="~/Satis/SatisGetir/@sh.Satisid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="~/Satis/SatisDetay/@sh.Satisid" class="btn btn-default" style="background-color:lightcoral">Detay</a></td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary">Satış Yap</a>




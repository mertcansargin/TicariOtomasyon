@model TicariOtomasyon.Models.Siniflar.Cariler


@using (Html.BeginForm("CariBilgiGuncelle", "CariPanel", FormMethod.Post))
{
    <form class="form-horizontal">

        <div class="form-group row">

            <label for="inputName" class="col-sm-2 col-form-label">Adı:</label>

            <div class="col-sm-10">
                @Html.HiddenFor(x=>x.Cariid)
                @Html.TextBoxFor(x => x.CariAd, new {@class="form-control"})
            </div>

        </div>

        <div class="form-group row">

            <label for="inputEmail" class="col-sm-2 col-form-label">Soyadı:</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputName2" class="col-sm-2 col-form-label">Şehir:</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputExperience" class="col-sm-2 col-form-label">Mail:</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre:</label>

            <div class="col-sm-10">

                @Html.TextBoxFor(x => x.CariSifre, new { @class = "form-control" })

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <div class="checkbox">

                    <label>

                        <input type="checkbox"> Okudum anladım <a href="#">şartları kabul ediyorum</a>

                    </label>

                </div>

            </div>

        </div>

        <div class="form-group row">

            <div class="offset-sm-2 col-sm-10">

                <button type="submit" class="btn btn-danger">Güncelle</button>

            </div>

        </div>

    </form>
    }
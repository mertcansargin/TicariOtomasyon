@using TicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>Kargo Takip kodu: @Html.TextBox("a") <input type="submit" value="Ara" name="takipKodu" /></p>
}
<br />

<table class="table table-bordered">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detaylar</th>

    </tr>

    @foreach (var k in Model)
    {
    <tr>

        <td>@k.Personel</td>
        <td>@k.Alici</td>
        <td>@k.TakipKodu</td>
        <td>@k.Tarih</td>

        <td><a href="/CariPanel/CariKargoTakip/@k.TakipKodu" class="btn btn-default" style="background-color:lightcoral">Detay</a></td>
    </tr>
}

</table>


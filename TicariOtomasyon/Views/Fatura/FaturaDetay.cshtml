@using TicariOtomasyon.Models.Siniflar
@model  List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>FaturaDetay</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>

<table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Miktar</th>
        <th>Tutar</th>
    </tr>
    @foreach (var fk in Model)
    {
        <tr>
            <td>@fk.FaturaKalemid</td>
            <td>@fk.Aciklama</td>
            <td>@fk.Miktar</td>
            <td>@fk.BirimMiktar</td>
            <td>@fk.Tutar</td>

        </tr>
    }
</table>  
  <a class="btn btn-default" style="background-color:mistyrose" href="~/Fatura/YeniKalem/">Yeni Fatura Kalem Girişi</a>

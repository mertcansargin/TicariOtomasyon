@model TicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>PersonelEkle</h2>

@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" })) { 
    <form class="form-group" method="post">
        <br />
        @Html.LabelFor(x => x.PersonelAd) @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" }) <br />
        @Html.LabelFor(x => x.PersonelSoyad) @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" }) <br />
        @Html.LabelFor(x => x.PersonelGorsel)  <br /> <input type="file" name="PersonelGorsel" />   <br /><br />
        @Html.LabelFor(x => x.Departman.Departmanid, "Personel Departman:") @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })

        <br />
        <button class=" btn btn-info">Kaydet</button>


    </form>
}

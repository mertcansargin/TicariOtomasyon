@model TicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>PersonelGetir</h2>


@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.Personelid)
        @Html.LabelFor(x => x.PersonelAd) @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
        @Html.LabelFor(x => x.PersonelSoyad) @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
        @Html.LabelFor(x => x.PersonelGorsel)  <br /> <input type="file" name="PersonelGorsel" />   <br /><br />
        @Html.LabelFor(x => x.Departmanid, "Personel Departman: ")  @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <button class="btn btn-warning">Güncelle</button>
}

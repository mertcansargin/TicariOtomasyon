@model TicariOtomasyon.Models.Siniflar.Departman
@{
    ViewBag.Title = "DepartmanEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Ekle</h2>
<br />

<form class="form-group" method="post">
    <br />
    @Html.LabelFor(x => x.Departmanid, "Departman Adı:")
    @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
    <br />
    <button class=" btn btn-info">Kaydet</button>
</form>

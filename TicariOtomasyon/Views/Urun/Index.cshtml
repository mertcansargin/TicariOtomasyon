@using TicariOtomasyon.Models.Siniflar;
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
    {
    <p>Ürün Adı: @Html.TextBox("p") <input type="submit" value="Ara" /></p>
    }
<br />

    <table class="table table-bordered">
        <tr>
            <th>UrunAdi</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>AlisFiyat</th>
            <th>SatisFiyat</th>
            <th>Durum</th>
            <th>UrunGorsel</th>
            <th>Kategori</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>

        </tr>
        @foreach (var k in Model)
        { 
            <tr>
                <td>@k.UrunAdi</td>
                <td>@k.Marka</td>
                <td>@k.Stok</td>
                <td>@k.AlisFiyat ₺</td>
                <td>@k.SatisFiyat ₺</td>
                <td>@k.Durum</td>
                <td>@k.UrunGorsel</td>
                <td>@k.Kategori.KategoriAd</td>

                <td><a href="/Urun/UrunSil/@k.Urunid" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/UrunGetir/@k.Urunid" class="btn btn-success">Güncelle</a></td>
                <td><a href="/Urun/SatisYap/@k.Urunid" class="btn btn-success">Satış Yap</a></td>
            </tr>
            }
    </table>
    <a href="/Urun/UrunEkle" class="btn btn-primary">Yeni Urun</a>

